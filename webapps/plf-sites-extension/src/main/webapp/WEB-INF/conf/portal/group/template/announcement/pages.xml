<page-set
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_objects_1_11 http://www.gatein.org/xml/ns/gatein_objects_1_11"
  xmlns="http://www.gatein.org/xml/ns/gatein_objects_1_11">
  <page>
    <name>home</name>
    <title>Home</title>
    <access-permissions>member:@owner@</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    <container template="system:/groovy/portal/webui/container/UIPageLayout.gtmpl"><!-- To be deleted once WebUI is cleaned from Meeds package -->
      <section-columns>
        <column col-span="12">
          <portlet-application>
            <portlet>
              <application-ref>social</application-ref>
              <portlet-ref>SpaceBannerPortlet</portlet-ref>
            </portlet>
            <title>Space Banner</title>
          </portlet-application>
        </column>
      </section-columns>
      <section-columns
        sticky-beahvior="true"
        mobile-columns-style="true">
        <column col-span="8">
          <portlet-application>
            <portlet>
              <application-ref>content</application-ref>
              <portlet-ref>NewsListView</portlet-ref>
            </portlet>
            <title>News List</title>
          </portlet-application>
          <portlet-application>
            <portlet>
              <application-ref>social</application-ref>
              <portlet-ref>SpaceActivityStreamPortlet</portlet-ref>
            </portlet>
            <title>Space Activity Stream</title>
          </portlet-application>
        </column>
        <column col-span="4">
          <portlet-application>
            <portlet>
              <application-ref>content</application-ref>
              <portlet-ref>NewsListView</portlet-ref>
            </portlet>
            <title>News List</title>
          </portlet-application>
          <portlet-application>
            <portlet>
              <application-ref>social</application-ref>
              <portlet-ref>SpaceWidgetDescription</portlet-ref>
            </portlet>
            <title>Space Description</title>
          </portlet-application>
          <container id="space-home-widgets-announcement-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
            <name>space-home-widgets-announcement-container</name>
            <factory-id>addonContainer</factory-id>
          </container>
        </column>
      </section-columns>
    </container>
  </page>

  <page profiles="task">
    <name>tasks</name>
    <title>Tasks</title>
    <access-permissions>member:@owner@</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    <container template="system:/groovy/portal/webui/container/UIPageLayout.gtmpl">
      <section-columns>
        <column col-span="12">
          <container template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
            <name>top-space-task-announcement-container</name>
            <factory-id>addonContainer</factory-id>
          </container>
          <portlet-application>
            <portlet>
              <application-ref>task-management</application-ref>
              <portlet-ref>TasksManagement</portlet-ref>
            </portlet>
            <title>Space Tasks</title>
          </portlet-application>
          <container template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
            <name>bottom-space-tasks-announcement-container</name>
            <factory-id>addonContainer</factory-id>
          </container>
        </column>
      </section-columns>
    </container>
  </page>

  <page profiles="notes">
    <name>notes</name>
    <title>Notes</title>
    <access-permissions>member:@owner@</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    <container template="system:/groovy/portal/webui/container/UIPageLayout.gtmpl">
      <section-columns>
        <column col-span="12">
          <container id="top-space-notes-announcement-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
            <name>top-space-notes-announcement-container</name>
            <factory-id>addonContainer</factory-id>
          </container>
          <portlet-application>
            <portlet>
              <application-ref>notes</application-ref>
              <portlet-ref>Notes</portlet-ref>
            </portlet>
            <title>Space Notes</title>
          </portlet-application>
          <container id="bottom-space-notes-announcement-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
            <name>bottom-space-notes-announcement-container</name>
            <factory-id>addonContainer</factory-id>
          </container>
        </column>
      </section-columns>
    </container>
  </page>

  <page>
    <name>members</name>
    <title>Space Members</title>
    <access-permissions>member:@owner@</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    <container template="system:/groovy/portal/webui/container/UIPageLayout.gtmpl">
      <section-columns>
        <column col-span="12">
          <container id="top-space-members-announcement-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
            <name>top-space-members-announcement-container</name>
            <factory-id>addonContainer</factory-id>
          </container>
          <portlet-application>
            <portlet>
              <application-ref>social</application-ref>
              <portlet-ref>MembersPortlet</portlet-ref>
            </portlet>
            <title>Space Settings</title>
          </portlet-application>
          <container id="bottom-space-members-announcement-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
            <name>bottom-space-members-announcement-container</name>
            <factory-id>addonContainer</factory-id>
          </container>
        </column>
      </section-columns>
    </container>
  </page>

  <page>
    <name>settings</name>
    <title>Space Settings</title>
    <access-permissions>manager:@owner@</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    <container template="system:/groovy/portal/webui/container/UIPageLayout.gtmpl">
      <section-columns>
        <column col-span="12">
          <container id="top-space-settings-announcement-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
            <name>top-space-settings-announcement-container</name>
            <factory-id>addonContainer</factory-id>
          </container>
          <portlet-application>
            <portlet>
              <application-ref>social</application-ref>
              <portlet-ref>SpaceSettingPortlet</portlet-ref>
            </portlet>
            <title>Space Settings</title>
          </portlet-application>
          <container id="bottom-space-settings-announcement-container" template="system:/groovy/portal/webui/container/UIAddOnContainer.gtmpl">
            <name>bottom-space-settings-announcement-container</name>
            <factory-id>addonContainer</factory-id>
          </container>
        </column>
      </section-columns>
    </container>
  </page>

</page-set>