          <portlet-application>
            <portlet>
              <application-ref>app-center</application-ref>
              <portlet-ref>AppCenterAdminSetupPortlet</portlet-ref>
              <preferences>
                <preference>
                  <name>pageSize</name>
                  <value>10</value>
