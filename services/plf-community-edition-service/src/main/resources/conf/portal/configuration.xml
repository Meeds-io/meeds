<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>org.exoplatform.commons.info.ProductInformations</type>
    <init-params>
      <value-param>
        <name>product.versions.declaration.file</name>
        <value>jar:/conf/platform.properties</value>
      </value-param>
    </init-params>
  </component>

  <!-- PLF-4469 : replace the PropertyConfigurator to be able to load optional files - without any error -->
  <component>
    <key>org.exoplatform.container.PropertyConfigurator</key>
    <type>org.exoplatform.container.ExtendedPropertyConfigurator</type>
    <init-params>
      <values-param>
        <name>properties.urls</name>
        <!-- Configuration file for default configuration of docker images -->
        <value>file:${exo.conf.dir}/docker.properties</value>
        <!-- PLF-4469 : Load user configuration from ${exo.conf.dir}/exo.properties if it exists -->
        <value>file:${exo.conf.dir}/exo.properties</value>
        <!-- PLF-4469 : configuration.properties must be loaded from classpath to get default settings -->
        <value>jar:/conf/platform/configuration.properties</value>
      </values-param>
      <properties-param>
        <name>ProductEditionProperty</name>
        <description>Product edition property</description>
        <property name="exo.product.edition" value="community" />
      </properties-param>
      <properties-param>
        <name>EnableMainStreamComposerProperty</name>
        <description>Enable main stream composer property</description>
        <property name="exo.config.mainStreamComposer.enabled" value="${exo.config.mainStreamComposer.enabled:true}" />
      </properties-param>
    </init-params>
  </component>


  <!-- This declares the default portal container for Platform -->
  <component>
    <type>org.exoplatform.container.definition.PortalContainerConfig</type>
    <init-params>
      <value-param>
        <name>default.portal.container</name>
        <value>portal</value>
      </value-param>
      <value-param>
        <name>default.rest.context</name>
        <value>rest</value>
      </value-param>
      <value-param>
        <name>ignore.unregistered.webapp</name>
        <value>${ignore.unregistered.webapp:true}</value>
      </value-param>       
      <!-- The name of the default security realm -->
      <value-param>
        <name>default.realm.name</name>
        <value>${exo.security.domain}</value>
      </value-param>
      <object-param>
        <name>default.portal.definition</name>
        <object type="org.exoplatform.container.definition.PortalContainerDefinition">
          <field name="dependencies">
            <collection type="java.util.ArrayList">
               <!-- gatein -->
               <value>
                  <string>portal</string>
               </value>
               <value>
                  <string>exoadmin</string>
               </value>
               <value>
                  <string>rest</string>
               </value>
               <value>
                  <string>web</string>
               </value>
               <value>
                  <string>eXoResources</string>
               </value>
               <value>
                  <string>commons-extension</string>
               </value>
               <value>
                  <string>cometd</string>
               </value>
               <value>
                  <string>social-extension</string>
               </value>
               <value>
                  <string>social-portlet</string>
               </value>
            </collection>
          </field>
        </object>
      </object-param>
    </init-params>
  </component>

</configuration>
